{{#each movies}}
  <div class="col s4">
    <div class="card blue-grey darken-1 cardContainer">
      <div class="card-content white-text">
        <img id="moviePicture{{imdbID}}" class="poster-image" src="{{Poster}}">
        {{#if id}}<span data-delete-id="{{id}}" class="chip deleteChip">Delete<i class="close material-icons">close</i></span>{{/if}}
        <span class="card-title" id="movieTitle{{imdbID}}">{{Title}}</span>
        <p><span>Year: </span><span id="movieYear{{imdbID}}">{{Year}}</span></p>
        <p><span>Actors: </span><span id="movieActors{{imdbID}}">{{Actors}}</span></p>
        <p><span>Rating: </span><span id="movieRating{{imdbID}}">{{Rating}}</span></p>
      </div>
          <div class="card-action">
            <a data-add-id="{{imdbID}}" href="#" class="addButton">Add to Watchlist</a>
